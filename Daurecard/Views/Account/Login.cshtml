@model Daurecard.Models.ViewModels.LoginViewModel




<div id="main" class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Connexion</h2>
            <section id="loginForm">
                <form id="account" method="post" asp-controller="Account" asp-action="Login">
                    <h4>Veuillez saisir votre email et votre mot de passe pour vous connectez.</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <label class="col-md-2" asp-for="Email"></label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="margin-top: 5px;">
                        <label class="col-md-2" asp-for="Password"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 5px;">
                        <div class="col-md-10 offset-md-2 checkbox">
                            <label asp-for="RememberMe" class="pr-4 pl-0">
                                <input asp-for="RememberMe" />
                            </label>
                            Rester Connecté ?
                        </div>
                    </div>
                    <div class="form-group" style="margin-top: 5px;">
                        <div class="col-md-10 offset-md-2" style="width: 250px;">
                            <input type="submit" value="Connexion" class="btn btn-success" />
                        </div>
                    </div>
                    <div class="col-md-10 offset-md-2" style="margin-top: 5px;">
                        <a class="btn btn-primary" asp-action="Register">S'enregistrer</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
