@model Daurecard.Models.Client

@{
    ViewData["Title"] = "Delete";
}


<main id="main" class="main">
    <div class="pagetitle">
        <h1>Supprimer un client</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index">Client</a></li>
                <li class="breadcrumb-item active">Supprimer</li>
            </ol>
        </nav>
    </div>

    <h3>Êtes-vous sûr de vouloir supprimer ce </h3>
    <div>
        <h4>Client ?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProfileImage)
            </dt>
            <dd class="col-sm-10">
                <img src="~/Image/@Model.ProfileImage" width="50" height="50" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Prenom)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Prenom)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PostNom)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostNom)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tel)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tel)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entreprise)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entreprise.Adresse)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Supprimer" class="btn btn-danger" />
        </form>
    </div>
    </main>