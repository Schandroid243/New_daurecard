@inject Microsoft.AspNetCore.Identity.SignInManager<Daurecard.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-controller="Account" asp-action="LogOff">
        <ul class="nav navbar-nav">
            <li class=" nav-link" style="color:#012970;">Hello, @User.Identity.Name !</li>
            <li class="nav-item">
                <a class="nav-link" style="color:#51678F;" href="javascript:document.getElementById('logoutForm').submit()">Déconnexion</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link" style="color:#51678F;" id="registerLink" asp-controller="Account" asp-action="Register">S'enregistrer </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="color:#012970;" id="loginLink" asp-controller="Account" asp-action="Login">Connexion</a>
        </li>
    </ul>
}
